<Window x:Class="EDKGC.Views.Windows.MainWindow"
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
            xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
            xmlns:mvvc="clr-namespace:EDKGC.ViewModel"
            xmlns:cmd="clr-namespace:EDKGC.Infrastructure.Command.BasicCommands"
            mc:Ignorable="d"
            Title="{Binding Path=Main.Title}"
            Height="462" 
            Width="875"
            MinWidth="850" 
            MinHeight="450"
            Icon="../../Resources/EDKGC_ICON.ico"
           
            Foreground="LawnGreen" 
            BorderBrush="#FFEE0A0A" 
            OpacityMask="#FFF72222"
            HorizontalAlignment="Left" 
            VerticalAlignment="Top" 
            WindowStartupLocation="CenterScreen"
            
            >
    <Window.DataContext>
        <mvvc:ViewModelLocator />
    </Window.DataContext>



    <Grid x:Name="MainW" Background="#FF02353C">

        <Grid.RowDefinitions>
            <RowDefinition Height="178*"/>
            <RowDefinition Height="219*"/>
            <RowDefinition Height="29*"/>
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="12*"/>
            <ColumnDefinition Width="20*"/>
            <ColumnDefinition Width="111*"/>
            <ColumnDefinition Width="20*"/>
            <ColumnDefinition Width="12*"/>

        </Grid.ColumnDefinitions>

        <RichTextBox 
                     HorizontalAlignment="Center" 
                     IsReadOnly="True" 
                     RenderTransformOrigin="0.5,0.5" 
                     Grid.Column="2" FontSize="36" 
                     FontFamily="Engravers MT" 
                     Background="#FF2EAF7D" 
                     SelectionBrush="Transparent"
                     CaretBrush="#FF2EAF7D" 
                     OpacityMask="#FFDF1F1F" 
                     Margin="0,14,0,14" Width="555" Foreground="#FF2EAF7D" >
            <RichTextBox.Style>
                <Style TargetType="RichTextBox">
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Trigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation 
                                            Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)" To="1.1" 
                                            Duration="0:0:0.2"/>
                                        <DoubleAnimation 
                                            Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)" To="1.1"
                                            Duration="0:0:0.2"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.EnterActions>
                            <Trigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation 
                                            Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)" To="1" 
                                            Duration="0:0:0.2"/>
                                        <DoubleAnimation 
                                            Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)" To="1" 
                                            Duration="0:0:0.2"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.ExitActions>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </RichTextBox.Style>
            <RichTextBox.BorderBrush>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="Blue" Offset="0.0"/>
                    <GradientStop Color="Red" Offset="0.5"/>
                    <GradientStop Color="Green" Offset="1.0"/>
                </LinearGradientBrush>
            </RichTextBox.BorderBrush>
            <RichTextBox.BorderThickness>
                <Thickness>2</Thickness>
            </RichTextBox.BorderThickness>
            <RichTextBox.RenderTransform>
                <ScaleTransform ScaleX="1" ScaleY="1"/>
            </RichTextBox.RenderTransform>


            <FlowDocument>
                <Paragraph TextAlignment="Center">
                    <LineBreak/>
                    <Run Text="Welcome to EDKGC" 
                         Background="#0551413C" 
                         Foreground="#FF332825"/>
                    <LineBreak/>
                    <Run Text="Encryptor/Decrypted/Key Generator/Cracker" 
                         FontSize="12" 
                         Background="#00000000"
                         Foreground="#FF525C59"/>
                    <LineBreak/>
                </Paragraph>
            </FlowDocument>


        </RichTextBox>

        <Grid  Grid.Column="1" Grid.Row="1" Height="147" VerticalAlignment="Center" Grid.ColumnSpan="3">


            <Button  x:Name="StartButton" Grid.Column="0" Content="Start" 
                      Command="{Binding Main.ShowButtonsCommand}"  
                      CommandParameter="{Binding RelativeSource={RelativeSource Self}}" 
                      VerticalAlignment="Center" 
                      Background="#FF337331" 
                      Height="194" FontFamily="Wide Latin" 
                      FontSize="48" RenderTransformOrigin="0.505,0.513" Foreground="#FF00D4B0" BorderBrush="#FF6D2A2A" >
                <Button.Style> 
                    <Style TargetType="Button">
                        <Setter Property="RenderTransform">
                            <Setter.Value>
                                <ScaleTransform ScaleX="1" ScaleY="1"/>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Trigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation 
                                                Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)" To="1.1" 
                                                Duration="0:0:0.2"/>
                                            <DoubleAnimation 
                                                Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)" To="1.1" 
                                                Duration="0:0:0.2"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>
                                <Trigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation 
                                                Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)" To="1"
                                                Duration="0:0:0.2"/>
                                            <DoubleAnimation 
                                                Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)" To="1" 
                                                Duration="0:0:0.2"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.ExitActions>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

        </Grid>

        <Grid Grid.Column="1" Grid.Row="1" Height="147" 
              VerticalAlignment="Center" Grid.ColumnSpan="3">
            <StackPanel x:Name="ButtonsPanel" 
                        Background="#FF02353C" 
                        Margin="0,-24,-1,-23" 
                        Visibility="{Binding Main.ButtonsPanelVisibility}"
                        RenderTransformOrigin="0.511,0.496"
                        
>
                <StackPanel.Style>
                    <Style TargetType="StackPanel">
                        <Setter Property="RenderTransform">
                            <Setter.Value>
                                <ScaleTransform ScaleX="1" ScaleY="1"/>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Trigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation 
                                                Storyboard.TargetProperty="(StackPanel.RenderTransform).(ScaleTransform.ScaleX)" To="1.1" 
                                                Duration="0:0:0.2"/>
                                            <DoubleAnimation 
                                                Storyboard.TargetProperty="(StackPanel.RenderTransform).(ScaleTransform.ScaleY)" To="1.1" 
                                                Duration="0:0:0.2"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>
                                <Trigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation 
                                                Storyboard.TargetProperty="(StackPanel.RenderTransform).(ScaleTransform.ScaleX)" To="1" 
                                                Duration="0:0:0.2"/>
                                            <DoubleAnimation 
                                                Storyboard.TargetProperty="(StackPanel.RenderTransform).(ScaleTransform.ScaleY)" To="1" 
                                                Duration="0:0:0.2"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.ExitActions>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </StackPanel.Style>

                <Grid
                    HorizontalAlignment="Center" 
                    Height="196"
                    Width="753">

                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition />

                    </Grid.ColumnDefinitions>
                    <Grid >
                        <Grid.Resources>
                            <Style x:Key="ButtonStyle" TargetType="Rectangle">
                                <Setter Property="Width" Value="278"/>
                                <Setter Property="Height" Value="50"/>
                                <Setter Property="HorizontalAlignment" Value="Center"/>
                                <Setter Property="Margin" Value="0,10,0,10"/>
                                <Setter Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="1" ScaleY="1"/>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Trigger.EnterActions>
                                            <BeginStoryboard>
                                                <Storyboard>
                                                    <DoubleAnimation 
                                                        Storyboard.TargetProperty="(Rectangle.RenderTransform).(ScaleTransform.ScaleX)" To="1.1"
                                                        Duration="0:0:0.2"/>
                                                    <DoubleAnimation 
                                                        Storyboard.TargetProperty="(Rectangle.RenderTransform).(ScaleTransform.ScaleY)" To="1.1" 
                                                        Duration="0:0:0.2"/>
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </Trigger.EnterActions>
                                        <Trigger.ExitActions>
                                            <BeginStoryboard>
                                                <Storyboard>
                                                    <DoubleAnimation 
                                                        Storyboard.TargetProperty="(Rectangle.RenderTransform).(ScaleTransform.ScaleX)" To="1" 
                                                        Duration="0:0:0.2"/>
                                                    <DoubleAnimation 
                                                        Storyboard.TargetProperty="(Rectangle.RenderTransform).(ScaleTransform.ScaleY)" To="1"
                                                        Duration="0:0:0.2"/>
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </Trigger.ExitActions>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Grid.Resources>
                        <Rectangle Fill="#FFCBB9E0" 
                                   MouseDown="Button_Click" 
                                   RadiusX="29" RadiusY="29" 
                                   Style="{StaticResource ButtonStyle}" 
                                   RenderTransformOrigin="0.547,0.538" 
                                   HorizontalAlignment="Center" />
                        <TextBlock Text="Start working" 
                                   HorizontalAlignment="Center" 
                                   VerticalAlignment="Center" Foreground="Black" FontFamily="Arial Black"/>
                    </Grid>

                    <Grid Grid.Row="1" Grid.Column="0">
                        <Grid.Resources>
                            <Style x:Key="ButtonStyle" TargetType="Rectangle">
                                <Setter Property="Width" Value="278"/>
                                <Setter Property="Height" Value="50"/>
                                <Setter Property="HorizontalAlignment" Value="Center"/>
                                <Setter Property="Margin" Value="0,10,0,10"/>
                                <Setter Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="1" ScaleY="1"/>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Trigger.EnterActions>
                                            <BeginStoryboard>
                                                <Storyboard>
                                                    <DoubleAnimation 
                                                        Storyboard.TargetProperty="(Rectangle.RenderTransform).(ScaleTransform.ScaleX)" To="1.1"
                                                        Duration="0:0:0.2"/>
                                                    <DoubleAnimation 
                                                        Storyboard.TargetProperty="(Rectangle.RenderTransform).(ScaleTransform.ScaleY)" To="1.1" 
                                                        Duration="0:0:0.2"/>
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </Trigger.EnterActions>
                                        <Trigger.ExitActions>
                                            <BeginStoryboard>
                                                <Storyboard>
                                                    <DoubleAnimation 
                                                        Storyboard.TargetProperty="(Rectangle.RenderTransform).(ScaleTransform.ScaleX)" To="1" 
                                                        Duration="0:0:0.2"/>
                                                    <DoubleAnimation 
                                                        Storyboard.TargetProperty="(Rectangle.RenderTransform).(ScaleTransform.ScaleY)" To="1" 
                                                        Duration="0:0:0.2"/>
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </Trigger.ExitActions>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>

                        </Grid.Resources>
                        <Rectangle Fill="#FFCBB9E0" 
                                   RadiusX="29" RadiusY="29" 
                                   MouseDown="Button_Click_Iso" 

                                   Style="{StaticResource ButtonStyle}"
                                   HorizontalAlignment="Stretch"  
                                   RenderTransformOrigin="0.558,0.498" 
                                   Margin="48,24,50,24">


                        </Rectangle>
                        <TextBlock Text="ISO" 
                                   HorizontalAlignment="Center" 
                                   VerticalAlignment="Center" Foreground="Black" FontFamily="Segoe UI Black" />
                    </Grid>

                    <Grid Grid.Row="0" Grid.Column="1">
                        <Grid.Resources>
                            <Style x:Key="ButtonStyle" TargetType="Rectangle">
                                <Setter Property="Width" Value="278"/>
                                <Setter Property="Height" Value="50"/>
                                <Setter Property="HorizontalAlignment" Value="Center"/>
                                <Setter Property="Margin" Value="0,10,0,10"/>
                                <Setter Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="1" ScaleY="1"/>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Trigger.EnterActions>
                                            <BeginStoryboard>
                                                <Storyboard>
                                                    <DoubleAnimation 
                                                        Storyboard.TargetProperty="(Rectangle.RenderTransform).(ScaleTransform.ScaleX)" To="1.1"
                                                        Duration="0:0:0.2"/>
                                                    <DoubleAnimation 
                                                        Storyboard.TargetProperty="(Rectangle.RenderTransform).(ScaleTransform.ScaleY)" To="1.1" 
                                                        Duration="0:0:0.2"/>
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </Trigger.EnterActions>
                                        <Trigger.ExitActions>
                                            <BeginStoryboard>
                                                <Storyboard>
                                                    <DoubleAnimation 
                                                        Storyboard.TargetProperty="(Rectangle.RenderTransform).(ScaleTransform.ScaleX)" To="1"
                                                        Duration="0:0:0.2"/>
                                                    <DoubleAnimation 
                                                        Storyboard.TargetProperty="(Rectangle.RenderTransform).(ScaleTransform.ScaleY)" To="1"
                                                        Duration="0:0:0.2"/>
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </Trigger.ExitActions>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>

                        </Grid.Resources>
                        <Rectangle Fill="#FFCBB9E0"
                                   MouseDown="Rectangle_MouseDown" 
                                   RadiusX="29" RadiusY="29" 
                                   Style="{StaticResource ButtonStyle}" 
                                   RenderTransformOrigin="0.568,0.507" 
                                   HorizontalAlignment="Stretch" 
                                   Margin="48,24,50,24">

                        </Rectangle>
                        <TextBlock 
                            Text="Basic information"
                            HorizontalAlignment="Center" 
                            VerticalAlignment="Center" Foreground="Black" FontFamily="Segoe UI Black" />
                    </Grid>
                    <Grid Grid.Row="1" Grid.Column="1" RenderTransformOrigin="0.576,0.505">
                        <Grid.Resources>
                            <Style x:Key="ButtonStyle" TargetType="Rectangle">
                                <Setter Property="Width" Value="278"/>
                                <Setter Property="Height" Value="50"/>
                                <Setter Property="HorizontalAlignment" Value="Center"/>
                                <Setter Property="Margin" Value="0,10,0,10"/>
                                <Setter Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="1" ScaleY="1"/>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Trigger.EnterActions>
                                            <BeginStoryboard>
                                                <Storyboard>
                                                    <DoubleAnimation
                                                        Storyboard.TargetProperty="(Rectangle.RenderTransform).(ScaleTransform.ScaleX)" To="1.1" 
                                                        Duration="0:0:0.2"/>
                                                    <DoubleAnimation 
                                                        Storyboard.TargetProperty="(Rectangle.RenderTransform).(ScaleTransform.ScaleY)" To="1.1"
                                                        Duration="0:0:0.2"/>
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </Trigger.EnterActions>
                                        <Trigger.ExitActions>
                                            <BeginStoryboard>
                                                <Storyboard>
                                                    <DoubleAnimation 
                                                        Storyboard.TargetProperty="(Rectangle.RenderTransform).(ScaleTransform.ScaleX)" 
                                                        To="1"
                                                        Duration="0:0:0.2"/>
                                                    <DoubleAnimation 
                                                        Storyboard.TargetProperty="(Rectangle.RenderTransform).(ScaleTransform.ScaleY)" 
                                                        To="1" 
                                                        Duration="0:0:0.2"/>
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </Trigger.ExitActions>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>

                        </Grid.Resources>
                        <Rectangle Fill="#FF332825" 
                                   RadiusX="29" RadiusY="29" 
                                   Style="{StaticResource ButtonStyle}"
                                   HorizontalAlignment="Stretch"  
                                   RenderTransformOrigin="0.558,0.498" 
                                   Margin="49,24,50,24">

                            <Rectangle.InputBindings>
                                <MouseBinding Gesture="LeftClick" Command="{Binding Main.ExitCommand}">

                                </MouseBinding>
                            </Rectangle.InputBindings>
                        </Rectangle>

                        <TextBlock Text="Exit" 
                                   HorizontalAlignment="Center" 
                                   VerticalAlignment="Center" 
                                   FontFamily="Algerian" 
                                   Foreground="#FFCFAFAF" />
                    </Grid>
                </Grid>
            </StackPanel>

        </Grid>
        <DockPanel Grid.Row="3" 
                   LastChildFill="True" 
                   Grid.ColumnSpan="5" 
                   Grid.Column="0" 
                   Margin="0,0,0,0" 
                   VerticalAlignment="Bottom">
            <StatusBar DockPanel.Dock="Bottom" 
                       Height="25" 
                       VerticalContentAlignment="Bottom" 
                       Panel.ZIndex="1">
                <StatusBarItem VerticalAlignment="Bottom">
                    <TextBlock Text="{Binding Central.Status}"></TextBlock>
                </StatusBarItem>
                <ProgressBar 
                    DockPanel.Dock="Bottom" 
                    VerticalAlignment="Bottom" 
                    Height="19" Value="100" 
                    Width="758" 
                    HorizontalAlignment="Stretch" 
                    HorizontalContentAlignment="Stretch"/>
            </StatusBar>
        </DockPanel>

    </Grid>
</Window>